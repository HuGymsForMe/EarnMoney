#:kivy 1.11.1
<login>:
    MDFloatLayout:
        md_bg_color: 240/255, 240/255, 240/255, 1
        id: login_layout

        MDIconButton:
            icon: "chevron-left"
            user_font_size: "35sp"
            pos_hint: {"center_y": .95}
            on_release: app.on_close()

        Image:
            source: "img/ingresos.png"
            size_hint: .36, .36
            pos_hint: {"center_x": .22, "center_y": .8}
        
        MDLabel:
            text: "Salir"
            font_size: "18sp"
            font_name: "Arial"
            pos_hint:{"center_x": .615, "center_y": .949}

        MDLabel:
            text: "Earn Money"
            font_size: "32sp"
            font_name: "Arial"
            pos_hint:{"center_x": .917, "center_y": .815}

        MDLabel:
            text: "Crea, Ingresa, Genera"
            font_size: "16sp"
            font_name: "Arial"
            color: 120/255, 120/255, 120/255, 1
            pos_hint:{"center_x": .930, "center_y": .765}

        MDTextField:
            id: input_nickname
            hint_text: "Nombre de usuario"
            helper_text: ""
            font_name: "Arial"
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5, "center_y": .52}
            size_hint_x: .85
            line_color_focus: 0,0,0,1

        Image:
            source: "img/usuario.png"
            size_hint: .10, .10
            pos_hint: {"center_x": .90, "center_y": .54}

        MDTextField:
            id: input_password
            hint_text: "Contraseña"
            helper_text: ""
            font_name: "Arial"
            helper_text_mode: "persistent"
            pos_hint: {"center_x": .5, "center_y": .37}
            size_hint_x: .85
            line_color_focus: 0,0,0,1
            password: True

        Image:
            source: "img/llave.png"
            size_hint: .10, .10
            pos_hint: {"center_x": .90, "center_y": .39}

        MDTextButton:
            text: "¿Has Olvidado tu contraseña?"
            font_size: "9sp"
            font_name: "Arial"
            hailing: "center"
            color: 120/255, 120/255, 120/255, 1
            pos_hint: {"center_x": .715, "center_y": .320}

        MDFlatButton:
            text: "Ingresar"
            size_hint: .79, .08
            font_name: "Arial"
            pos_hint: {"center_x": .50, "center_y": .20}

            canvas.before:
                Color:
                    rgb: 41/255, 135/255, 168/255
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [6]
            on_press: root.ingress()
            on_release: root.manager.get_screen('menu_principal').mostrar_nombre_saldo()
        
        MDFlatButton:
            text: "Nuevo Usuario"
            size_hint: .79, .08
            font_name: "Arial"
            pos_hint: {"center_x": .50, "center_y": .08}

            canvas.before:
                Color:
                    rgb: 41/255, 135/255, 168/255
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [6]
            on_release: app.manager.current = 'registrarse'



    
